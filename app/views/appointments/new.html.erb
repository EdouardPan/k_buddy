<div class="form-title text-center">
  <h2>Ajouter un RDV</h2>
</div>

<div class="form text-center">
  <%= simple_form_for [@medical_professional, @appointment] do |f| %>

    <div class="form-inputs">
      <%= f.label "Jour & Heure de début" %>
      <br>
      <%= f.input :start_date, as: :datetime, html5: true, label: false %>
    </div>

    <div class="form-inputs">
      <%= f.label "Jour & Heure de fin" %>
      <br>
      <%= f.input :end_date, as: :datetime, html5: true, label: false %>
    </div>

    <div class="form-inputs">
      <%= f.label "Spécialité" %>
      <br>
      <%= f.input :category, label: false %>
    </div>

    <div class="form-inputs">
      <%= f.label "Notes" %>
      <br>
      <%= f.input :description, label: false %>
    </div>

    <div class="form-actions">
      <%= f.submit "Ajouter le RDV", class: "submit-button" %>
    </div>
<% end %>
</div>



