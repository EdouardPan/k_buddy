<div class="title-box">
  <h1><%= Date.today.to_s(:long) %></h1>
</div>

<div class="box">
  <h3>Consultations & Traitements</h3>
  <div class="section-box list-box">
    <div class="row">
      <div id="medical-records list-box">
        <% @events_grouped.each do |mr| %>
          <hr>
          <% if mr.is_a?(Appointment) %>
            <%= link_to(appointment_path(mr), class: "link") do %>
              <%= render 'shared/icons', object: mr %>
              <strong><%= mr.sorting_date.strftime("%I:%M%p")%> - <%= mr.end_date.strftime("%I:%M%p")%></strong> | <em><%= mr.category%></em>
            <% end %>
          <% else %>
            <%= link_to(treatment_path(mr), class: "link") do %>
              <%= image_tag ("treatment-icon.png"), class: "list-icon" %>
              <strong><%= mr.take_time.strftime("%I:%M%p")%></strong> | <em><%= mr.drug.name.split.first.chomp(",")%></em>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>



