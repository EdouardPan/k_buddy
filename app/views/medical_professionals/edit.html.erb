    <%= form_for @medical_professional do |f| %>
    <div class="form-inputs">
      <h4>Créer un nouvel agent médical</h4>
      <div class="form-group">
        <%= f.label "Nom de l'établissement" %>
        <%= f.text_field :location_name %>
      </div>

      <div class="form-group">
        <%= f.label "Addresse" %>
        <%= f.text_field :address %>
      </div>

      <div class="form-group">
        <%= f.label "Phone" %>
        <%= f.text_field :phone %>
      </div>

      <div class="form-group">
        <%= f.label "Spécialité" %>
        <%= f.text_field :specialty %>
      </div>

      <div class="form-group">
        <%= f.label "Nom du docteur" %>
        <%= f.text_field :doctor %>
      </div>

    <div class="form-group">
      <%= f.label "Email" %>
      <%= f.text_field :email %>
    </div>




    <div class="form-actions">
      <%= f.submit "Ajouter un RDV", class: "submit-button" %>
    </div>
  <% end %>

