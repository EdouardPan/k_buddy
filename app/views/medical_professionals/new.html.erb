<% if params[:event_type] == "appointment" %>
  <div class="form-title text-center">
    <h2>Avec quel médecin avez-vous rendez-vous ?</h2>
  </div>
  <% else %>
  <div class="form-title text-center">
    <h2>Quel médecin a émis votre nouvelle ordonnance ?</h2>
  </div>
<% end %>

<div class="text-center">

  <% unless current_user.medical_professionals.nil? || current_user.medical_professionals.empty? %>

    <%= form_for(@medical_professional, url: medical_professionals_path(event_type: @event_type))  do |f| %>

      <div class="form form-inputs">
        <div class="form-subtitle">
          <h3>Choisir parmi votre liste</h3>
        </div>

          <div class="form-inputs">

            <%= select("medical_professional", "id", current_user.medical_professionals.collect {|p| [p.location_with_doctor, p.id]}.uniq, {include_blank: 'None'}, class: "soflow") %>

          </div>

        <div class="form-actions">
          <%= f.submit "Choisir le médecin", class: "submit-button" %>
        </div>
      </div>

    <% end %>

  <% end %>

  <hr>

  <div class="form">
    <%= form_for(@medical_professional, url: medical_professionals_path(event_type: @event_type))  do |f| %>

      <div class="form-subtitle">
        <h3>Créer un nouvel agent médical</h3>
      </div>

      <div class="form-inputs">
        <%= f.label "Etablissement" %>
        <br>
        <%= f.text_field :location_name %>
      </div>

      <div class="form-inputs">
        <%= f.label "Addresse" %>
        <br>
        <%= f.text_field :address %>
      </div>

      <div class="form-inputs">
        <%= f.label "Téléphone" %>
        <br>
        <%= f.text_field :phone %>
      </div>

      <div class="form-inputs">
        <%= f.label "Spécialité" %>
        <br>
        <%= f.text_field :specialty %>
      </div>

      <div class="form-inputs">
        <%= f.label "Nom du docteur" %>
        <br>
        <%= f.text_field :doctor %>
      </div>

    <div class="form-inputs">
      <%= f.label "Email" %>
      <br>
      <%= f.text_field :email %>
    </div>

    <div class="form-actions">
      <%= f.submit "Valider", class: "submit-button" %>
    </div>

  <% end %>

</div>
