<h2>Qui est votre médecin?</h2>


<div class="text-center">
<% unless current_user.medical_professionals.nil? || current_user.medical_professionals.empty? %>
  <%= form_for(@medical_professional, url: medical_professionals_path(event_type: @event_type))  do |f| %>
    <div class="form-inputs">
      <h4>Choisir parmi une liste existante</h4>


        <div class="form-inputs">
          <%= f.select(:location_name) do %>
            <% current_user.medical_professionals.each do |mp| %>
              <%= content_tag(:option, mp.location_name, value: mp.id) %>
              <!-- A voir comment coupler avec un doctor nil -->
            <% end %>
          <% end %>
        </div>

      <div class="form-actions">
        <%= f.submit "J'ai choisi", class: "submit-button" %>
      </div>
    </div>

  <% end %>
<% end %>




    <%= form_for(@medical_professional, url: medical_professionals_path(event_type: @event_type))  do |f| %>
    <div class="form-inputs">
      <h4>Créer un nouvel agent médical</h4>
      <div class="form-group">
        <%= f.label "Nom de l'établissement" %>
        <%= f.text_field :location_name %>
      </div>

      <div class="form-group">
        <%= f.label "Addresse" %>
        <%= f.text_field :address %>
      </div>

      <div class="form-group">
        <%= f.label "Phone" %>
        <%= f.text_field :phone %>
      </div>

      <div class="form-group">
        <%= f.label "Spécialité" %>
        <%= f.text_field :specialty %>
      </div>

      <div class="form-group">
        <%= f.label "Nom du docteur" %>
        <%= f.text_field :doctor %>
      </div>

    <div class="form-group">
      <%= f.label "Email" %>
      <%= f.text_field :email %>
    </div>




    <div class="form-actions">
      <%= f.submit "Ajouter un RDV", class: "submit-button" %>
    </div>
  <% end %>

</div>
