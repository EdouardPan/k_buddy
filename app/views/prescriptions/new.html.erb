  <h2>Créer une nouvelle ordonnance</h2>
</div>

<%#= simple_form_for [@medical_professional, @prescription] do |f| %>
  <!-- Needs a space for this nesting to work-->
  <%#= f.label "Date du début" %>
  <%#= f.input_field :start_date, as: :date, html5: true %>
  <!-- Need to say that it is a date -->
  <%#= f.label "Date de fin" %>
  <%#= f.input_field :end_date, as: :date, html5: true %>
  <%#= f.submit "Valider", class: "submit-button" %>
<%# end %>

<div class="text-center form">

  <%= simple_form_for [@medical_professional,@prescription] do |f| %>
    <%= f.simple_fields_for :photos do |ph| %>
      <%= ph.input :url, as: :file, multiple: true, label: "Ajouter l'ordonnance" %>
    <% end %>
    <%#= f.association :drug, input_html: {id: "search-input", class: "soflow", placeholder: "Trouver un médicament"} %>
    <%= f.simple_fields_for :treatments do |t| %>
      <%= t.input :drug, label: 'Médicament', input_html: { class: "search-input", placeholder: "Trouver un médicament"} %>
      <%= f.input :start_date, label: 'Date de début', as: :string, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, label: 'Date de fin', as: :string, input_html: {class: "datepicker"} %>
      <div class="inline-form">
        <%= t.input :take_time, label: 'Heure de prise', as: :string, input_html: {class: "datepicker-time"} %>
        <%= t.input :quantity, label: 'Quantité' %>
      </div>
    <% end %>
    <div id="add-dose-0" class="legend">
      <i class="fas fa-plus"></i> Ajouter une dose
    </div>
    <hr>
    <%= link_to adddrug_path, remote: true, id: "add-drug" do %>
        <i class="fas fa-plus"></i> Ajouter un médicament
    <% end %>

    <%= f.submit class: 'submit-button' %>
  <% end %>

</div>
