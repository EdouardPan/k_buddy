<div class="form-title text-center">
  <h2>Créer une nouvelle ordonnance</h2>
</div>

<%#= simple_form_for [@medical_professional, @prescription] do |f| %>
  <!-- Needs a space for this nesting to work-->
  <%#= f.label "Date du début" %>
  <%#= f.input_field :start_date, as: :date, html5: true %>
  <!-- Need to say that it is a date -->
  <%#= f.label "Date de fin" %>
  <%#= f.input_field :end_date, as: :date, html5: true %>
  <%#= f.submit "Valider", class: "submit-button" %>
<%# end %>

<div class="text-center form">
  <%= form_tag medical_professional_prescriptions_path do %>
  <%#= select_tag  %>

  <div class="form-inputs">
    <%= label_tag 'Médicament' %>
    <br>
    <input name="drug_name" type="text" id="search-input" class="soflow" placeholder="Trouver un médicament" />
  </div>

  <div class="form-inputs">
    <%= label_tag 'Date de début' %>
    <br>
    <%= date_field(:prescription, :start_date) %>
  </div>

  <div class="form-inputs">
    <%= label_tag 'Date de fin' %>
    <br>
    <%= date_field(:prescription, :end_date) %>
  </div>

  <div class="form-inputs form-photo">
    <%= label_tag "Ajouter les pièces jointes" %>
    <br>
    <%= file_field :url, multiple: true %>
  </div>

  <div class="inline-form">
    <div class="form-inputs">
      <%= label_tag 'Heure de prise 1' %>
      <br>
      <%= time_field(:traitement_take_time, "take_time1") %>
    </div>

    <div class="form-inputs">
      <%= label_tag 'Quantité' %>
      <br>
      <%= text_field(:traitement_quantity, "quantity1") %>
    </div>
  </div>

  <div class="inline-form">
    <div class="form-inputs">
      <%= label_tag 'Heure de prise 2' %>
      <br>
      <%= time_field(:traitement_take_time, "take_time2") %>
    </div>

    <div class="form-inputs">
      <%= label_tag 'Quantité' %>
      <br>
      <%= text_field(:traitement_quantity, "quantity2") %>
    </div>
  </div>

  <div class="form-actions">
  <%= submit_tag "Valider", class: "submit-button" %>
  </div>

  <% end %>
</div>
