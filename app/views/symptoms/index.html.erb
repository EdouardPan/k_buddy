<div class="title-box">
  <h1>Mes symptômes</h1>
</div>

<%= form_tag symptoms_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Chercher un de mes symptômes"
  %>
<% end %>

<div class="section-box">
  <div class="row">
    <div id="list-box">
      <% @symptoms.reverse.each do |mr| %>
        <hr>
        <p><%= mr.start_date.to_s(:long) %> - <%= mr.end_date.to_s(:long)%></p>
        <p><%= mr.name%></p>
        <p>intensité : <%= mr.intensity%></p>
        <p><%= mr.description %></p>
      <% end %>
    </div>
  </div>
</div>
